<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.local.moltox.lcs.qanda_activityFragment"
    tools:showIn="@layout/activity_qanda_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_qanda_frag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hier\n\nFrage"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/btn_newrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_new_card"
            />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
